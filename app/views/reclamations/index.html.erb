<p id="notice"><%= notice %></p>

<h1>Reclamations</h1>

<table>
  <thead>
    <tr>
      <th>Durre</th>
      <th>Titre</th>
      <th>Couleur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reclamations.each do |reclamation| %>
      <tr>
        <td><%= reclamation.durre %></td>
        <td><%= reclamation.titre %></td>
        <td><%= reclamation.couleur %></td>
        <td><%= link_to 'Show', reclamation %></td>
        <td><%= link_to 'Edit', edit_reclamation_path(reclamation) %></td>
        <td><%= link_to 'Destroy', reclamation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reclamation', new_reclamation_path %>
